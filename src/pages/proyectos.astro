<style>
  .page-header {
    padding: 3rem 0 2rem;
  }

  .subtitle {
    color: var(--gray);
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }

  .projects-grid {
    display: grid;
    gap: 2rem;
    padding: 2rem 0 4rem;
  }

  .project-card {
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    border-color: var(--fg);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .project-card h2 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .description {
    color: var(--gray);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech-tag {
    background: var(--light-gray);
    border: 1px solid var(--border);
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.85rem;
    color: var(--fg);
    transition: all 0.2s;
  }

  .tech-tag:hover {
    border-color: var(--fg);
    transform: translateY(-2px);
  }

  .project-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    border: 1px solid var(--border);
    border-radius: 6px;
    font-size: 0.9rem;
    transition: all 0.2s;
    font-weight: 500;
  }

  .project-link:hover {
    background: var(--light-gray);
    border-color: var(--fg);
    transform: translateY(-2px);
  }

  .project-link svg {
    width: 18px;
    height: 18px;
  }

  .more-projects {
    text-align: center;
    padding: 2rem 0 4rem;
    color: var(--gray);
  }

  .more-projects a {
    color: var(--fg);
    text-decoration: underline;
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .project-card {
      padding: 1.5rem;
    }

    .page-header {
      padding: 2rem 0 1rem;
    }

    .project-card h2 {
      font-size: 1.3rem;
    }
  }
</style>